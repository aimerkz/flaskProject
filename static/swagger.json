{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "flaskProject API"
  },
"servers": [
        {
        "url": "/api"
        }
    ],

 "components": {
        "schemas": {
            "File": {
                "type": "object",
                "properties": {
                    "name": {
                    "type": "string",
                        "example": "file1"
                    },
                    "extension": {
                    "type": "string",
                        "example": ".txt"
                    },
                    "size": {
                    "type": "integer",
                        "example": 145658
                    },
                    "path": {
                    "type": "string",
                        "example": "/home/files"
                    },
                    "created_at": {
                    "type": "string",
                        "format": "date",
                        "example": "2022-11-20 18:00:00.565656"
                    },
                    "updated_at": {
                    "type": "string",
                        "format": "date",
                        "example": null
                    },
                    "comment": {
                    "type": "string",
                        "example": "comment"
                    }
                }
            },
            "file_id":{
            "type" : "integer",
            "properties" : {
                "name" : {
                    "type" : "integer"
                }
            }
        }
        }
    },

"paths": {
    "/files/upload": {
        "post": {
            "tags": [
                "Upload file"
            ],
            "description": "Загрузка файла из локального хранилища",
            "requestBody": {
                "content": {
                    "multipart/form-data": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "file": {
                                    "type": "string",
                                    "format": "binary",
                                    "nullable": true
                  }
                }
              },
                        "encoding": {
                            "file": {
                                "style": "form"
                            }
                        }
                    }
                }
            },
            "responses": {
                "201": {
                    "description": "OK",
                    "schema": {
                        "$ref": "#/components/schemas/File"
                    }
                },
                "500": {
                    "description": "ERROR",
                    "schema": {
                        "$ref": "#/components/schemas/File"
                    }
                }
            }
        }},
        "/files": {
            "post": {
                "tags": [
                    "Create info file"
                ],
                "description": "Создание информации о файле",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/File"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    },
                    "500": {
                        "description": "ERROR",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Get all files"
                ],
                "description": "Получение списка информации о всех файлах",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    },
                    "404": {
                        "description": "NOT FOUND",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    }
                }
            }
        },
        "/files/search/": {
            "get": {
                "tags": [
                    "Get all files"
                ],
                "description": "Поиск файлов по path",
                "parameters": [
                    {
                        "name": "path",
                        "in": "query",
                        "description": "Search file",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    },
                    "404": {
                        "description": "NOT FOUND",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    }
                }
            }
        },
        "/files/{file_id}": {
            "get": {
                "tags": [
                    "Get file"
                ],
                "description": "Получение информации о файле по file_id",
                "parameters": [
                    {
                        "name": "file_id",
                        "in": "path",
                        "description": "file_id",
                        "required": true,
                        "type": "integer",
                        "schema": {
                            "$ref": "#/components/schemas/file_id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    },
                    "404": {
                        "description": "NOT FOUND",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Delete file"
                ],
                "description": "Удаление файла по file_id",
                "parameters": [
                    {
                        "name": "file_id",
                        "in": "path",
                        "required": true,
                        "type": "integer",
                        "schema": {
                            "$ref": "#/components/schemas/file_id"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    },
                    "500": {
                        "description": "ERROR",
                        "schema": {
                            "$ref": "#/components/schemas/File"
                        }
                    }
                }
            }
        }
    }
}